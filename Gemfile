  gem 'thin'
  gem 'ruby-debug'
  gem 'rails3-generators'
end

group :test do
  gem 'database_cleaner'
  gem 'mocha'
  gem 'shoulda'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'launchy'
  gem 'timecop'
end

group :test, :development do
  gem 'rspec-rails'
end

